ARG BASE_IMAGE
FROM "$BASE_IMAGE"
  USER root:root
  WORKDIR '/app/'

  COPY 'src/main/docker/LICENCE' '/licenses/stackgres'

  COPY 'src/main/docker/stackgres-distributedlogs-controller.jvm.sh' '/app/stackgres-distributedlogs-controller.sh'

  COPY 'target/quarkus-app/lib/' '/app/lib/'
  COPY 'target/quarkus-app/*.jar' '/app/'
  COPY 'target/quarkus-app/app/' '/app/app/'
  COPY 'target/quarkus-app/quarkus/' '/app/quarkus/'

  RUN chown -R jboss:jboss '/app'
  RUN chmod 755 '/app'
  RUN chmod 755 '/app/stackgres-distributedlogs-controller.sh'

  ENV HOME=/app LANG=C.utf8
  USER jboss:jboss
  EXPOSE 8080
  EXPOSE 8443

  RUN if uname -m | grep -q x86_64; then JAVA_CDS_GENERATION=true /app/stackgres-distributedlogs-controller.sh; fi

  CMD '/app/stackgres-distributedlogs-controller.sh'
